                <div class="clearfix"></div>
                <div class="loader_3"></div>
                <div class="color button small report">Report</div>
                <div class="color button small dark_button cancel">Cancel</div>
              </div>
              <!-- End reported -->
              <div class="question_poll_end" style="display: none">
                <%= render partial: 'partials/progressbar_warp', locals: {question: @question} %>
              </div>
              <div class="open_stat btn btn-info">Xem thống kê <i class="fa fa-chevron-down"></i></div>
              <!-- End question_poll_end -->
              <div class="clearfix height_20"></div>
              <h4><%= @question.content %></h4><br>
                <%= form_for @question.users_answers.build, remote: true, authenticity_token: true, format: :js do |f| %>
                  <% @question.answers.each do |answer| %>
                    <div class="checkbox checkbox-primary">
                        <%= f.hidden_field :question_id, value: @question.id%>
                        <%= f.radio_button :answer, answer.id %>
                        <%= answer.label %>: <%= answer.content %>
                    </div>

                  <% end %>
                  <%= f.submit t('views.button.answer'), id: 'button-submit-question-show', class: 'center'%>
                <% end %>
              </p>
              <div class="loader_2"></div>
              <div class="no_vote_more"></div>
            </div>
            <div class="question-details">
