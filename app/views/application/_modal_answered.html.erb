<!-- Modal Answered -->
<div class="modal fade" id="modal-answered" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="">
    <!--Content-->
    <div class="modal-content">
       
      <!--Header-->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3><i class="fa fa-info"></i><%= t('views.answers.result')%></h3>
      </div>
      
      <!--Body-->
      <div class="modal-body center">
        <div class="btn btn-info" id="answer-result"></div>
        <div class="md-form">
          <h4><i class="fa fa-info"></i><span id='user_ansered' ></span></h4>
          <h4><i class="fa fa-info"></i><span id='correct_answer' ></span></h4>
        </div>

        <div class="question_poll_end">
        </div>
        <!-- End progressbar-warp -->
      </div>
      
      <!--Footer-->
      <div class="modal-footer">
<!--         <div class="options">
          <p>Not a member? <a href="#">Sign Up</a></p>
          <p>Forgot <a href="#">Password?</a></p>
        </div> -->
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('views.button.close')%></button>
      </div>
    </div>
    <!--/.Content-->
  </div>
</div>