<!-- Modal Answered -->
<div class="modal fade" id="modal-answered" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="">
    <!--Content-->
    <div class="modal-content">
       
      <!--Header-->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3><i class="fa fa-info"></i><%= t('views.answers.result')%></h3>
      </div>
      
      <!--Body-->
      <div class="modal-body center">
        <div id="answer-result"></div>
        <div><h2 id="user-point"></span></h2></div>


        <div class="md-form">
          <h4 id='user_ansered'></h4>
          <h4 id='correct_answer'></h4>
        </div>

        <div class="question_poll_end">
        </div>
        <!-- End progressbar-warp -->
      </div>
      
      <!--Footer-->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" id='close-result-modal' data-dismiss="modal"><%= t('views.button.close')%></button>
      </div>
    </div>
    <!--/.Content-->
  </div>
</div>